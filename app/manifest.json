{
    "name": "Simple Text Sync",
    "version": "1",
    "manifest_version": 2,
    "incognito": "split",
    "description": "A simple sync-able text pad",
    "browser_action": {
        "default_icon": "images/icon.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "permissions": [
        "tabs",
        "bookmarks"
    ]
}