{
    "name": "Write Wall",
    "version": "1.2",
    "manifest_version": 2,
    "incognito": "split",
    "description": "A simple, sync-able text pad similar to Write Space",
    "browser_action": {
        "default_icon": "images/icon.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "permissions": [
        "tabs",
        "bookmarks"
    ]
}