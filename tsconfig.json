{
  "compilerOptions": {
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ES2024",
    "rootDir": ".",
    "outDir": "./dist/",
    "noEmitOnError": false,
    "noImplicitThis": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
