{
  "compilerOptions": {
    "sourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "outDir": "./dist/",
    "noEmitOnError": false,
    "noImplicitThis": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "ES2023"],
    "target": "ES2022",
    "typeRoots": ["node_modules/@types"]
  },
}
