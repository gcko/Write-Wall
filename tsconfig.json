{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "module": "ES2022",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "outDir": "dist/",
    "noEmitOnError": true,
    "noImplicitThis": false,
    "lib": ["dom", "ES2022"],
    "jsx": "react",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/*"
  ]
}
